{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["NODE_LINKER"],
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ]
    },
    "dev": {
      "env": ["OPEN_AI_CREDS", "POSTGRES_PASSWORD", "PUBLIC_URL", "GAME_STATE_DATABASE_HOST_URL", "GAME_STATE_DIRECT_URL"]
    },
    "lint": {
      "dependsOn": [
        "^build"
      ]
    },
    "ci": {
      "dependsOn": [
        "build",
        "lint"
      ]
    },
    "db:migrate": {
      "env": ["GAME_STATE_DATABASE_HOST_URL", "GAME_STATE_DIRECT_URL"]
    }
  }
}
