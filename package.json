{
  "name": "resync-games",
  "packageManager": "yarn@4.3.1",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": "22.5.1"
  },
  "scripts": {
    "ci": "turbo run ci",
    "dev": "turbo run dev --filter=@resync-games/${0}",
    "docker": "open /Applications/Docker.app && docker-compose -p resync-games -f docker-compose.yml up -d",
    "deploy": "sudo -E docker-compose -p resync-games -f docker-compose.yml up -d",
    "migrate": "turbo run db:migrate --filter=@resync-games/database --filter=@resync-games/game-state-database"
  },
  "monorepo": true,
  "devDependencies": {
    "@eslint/compat": "^1.1.1",
    "@eslint/js": "^9.8.0",
    "@next/eslint-plugin-next": "^14.2.5",
    "@types/eslint": "^9.6.0",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^22.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@yarnpkg/pnpify": "^4.1.0",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "eslint-plugin-typescript-sort-keys": "^3.2.0",
    "prettier": "^3.3.3",
    "turbo": "2.0.10",
    "typescript": "^5.5.4",
    "typescript-eslint": "^7.18.0"
  }
}
